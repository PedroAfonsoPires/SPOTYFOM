{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "compilar projeto",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-Wall",
                "-Wextra",
                "-g3",
                "-Iarquivos.h",
                "arquivos.c/main.c",
                "arquivos.c/musica.c",
                "-o",
                "arquivos.c/output/main.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compilando todos os arquivos .c"
        }
    ]
}
